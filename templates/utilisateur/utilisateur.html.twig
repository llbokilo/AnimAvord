{% extends 'base.html.twig' %}

{% block title %}Détail utilisateur{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">
    <h1>Détails utilisateur</h1>
    <p>Nom: {{utilisateur.Nom}}</p>
    <p>Prénom: {{utilisateur.Prenom}}</p>
    <p>Tel: {{utilisateur.Tel}}</p>
    <p>Mail: {{utilisateur.Mail}}</p>
    <p>User: {{utilisateur.User}}</p>
    <p>Type utilisateur: {{utilisateur.typeUtilisateur}}</p>
    <p>Créé le: {{utilisateur.Datecreation|date('d/m/Y')}}</p>

    <a href="/utilisateur/list"><button>Retour</button></a
</div>
{% endblock %}