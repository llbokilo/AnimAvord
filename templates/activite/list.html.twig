{% extends 'base.html.twig' %}

{% block title %}Activités{% endblock %}

{% block body %}
<style>
    .bandeaubleu{background-color:lightblue;margin-left:auto;margin-right:auto;}
    .basdepage{font-weight:bold;text-align:center;font-size:20px;}
</style>

    <div class="container-fluid">
        <h1 class="bandeaubleu">
            <ul class="nav justify-content-between">
                <li class="nav-item"><a href="/">Accueil</a></li>
                <li class="nav-item"><img src={{asset('Pics/large.png')}} height="100" width="300"/></li>
                <li class="nav-item"><a href="/Logout">Déconnexion</a></li>
            </ul>
        </h1>
    </div>

    <div class="container-fluid">
        <a href="/activite/create"><button>Créer une nouvelle activité</button></a>
    </div>

    <div class="container-fluid">
        <div class="row">
            <div class="col">
                {% for activite in activiteList %}
                    <li>{{activite.titre}}
                        <a href="/activite/{{activite.getId()}}"><button>Détails</button></a>
                        <a href="/activite/delete/{{activite.getId()}}"><button type="submit">Supprimer</button></a>
                    </li>
                {% endfor %}
            </div>
        </div>
    </div>
        <footer class="basdepage border-top border-2">@2021 - Tous droits réservés - Anim'Avord</footer>
    </div>
{% endblock %}